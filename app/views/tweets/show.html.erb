<div class="l-tweets-show">
  <div class="tweets__image" %>
    <%= image_tag @tweet.image %>
  </div>
  <div class="tweets__text" %>
    <h3>
      <%= @tweet.text %>
    </h3>
  </div>
</div>

<div class="ui teal labels">
<% @tweet.tags.each do |tag| %>
  <%= link_to tag_path(tag), class: 'ui label' do %>
    <%= tag %><i class="icon close"></i>
  <% end %>
<% end %>
</div>

<div class="l-comments">
  <div class="m-h2-with-margin">
    <h2>Comments</h2>
  </div>
  <% @tweet.comments.each do |comment|  %>
    <div class="cards ui m-comment-card">
      <%= render partial: 'tweets/comments/comment', locals: { comment: comment } %>
  </div>
</div>
<% end %>
