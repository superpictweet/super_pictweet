<div class="tweets__image" %>
  <%= image_tag tweet.image %>
</div>
  <ul class="more_list">
    <li>
      <%= link_to 'show', tweet_path(tweet), method: :get%>
    </li>
    <% if user_signed_in? && current_user.id == tweet.user_id %>
      <li>
      <% if policy(tweet).update? %>
        <%= link_to 'edit', edit_tweet_path(tweet) %>
      <% end %>
      </li>
      <li>
      <% if policy(tweet).destroy? %>
        <%= link_to 'delete', tweet_path(tweet), method: :delete %>
      <% end %>
      </li>
    <% end %>
  </ul>
<div class="tweets__text" %>
  <%= tweet.text %>
  <%= link_to "#{tweet.user.name}", user_path(tweet.user.id) %>
</div>
