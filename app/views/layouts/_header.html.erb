<div class="ui top fixed inverted menu bg-skyblue">
  <%= link_to root_path do %>
    <%= image_tag "logo.png", class: "m-logo" %>
  <% end %>
  <div class="right menu">
    <% if user_signed_in? %>

      <%= link_to destroy_user_session_path, method: :delete, class: "item" do %>
        SignOut with Facebook
      <% end %>

      <%= link_to new_tweet_path, class: 'ui button bg-pink bg-pink-hover txt-white', style: 'margin: 5px 15px 5px 5px; line-height: 2.3rem;' do %>
        Tweet
      <% end %>

      <%= link_to acts_as_taggable_on_tags_path, class: 'ui teal button bg-teal bg-teal-hover txt-white', style: 'margin: 5px 15px 5px 5px; line-height: 2.3rem;' do %>
        Tags
      <% end %>

    <% else %>
      <%= link_to user_facebook_omniauth_authorize_path, class: "item" do %>
        SignIn with Facebook
      <% end %>
    <% end %>
  </div>
</div>
